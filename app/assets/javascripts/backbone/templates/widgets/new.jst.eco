<h3>Add a Widget</h3>

<form>
  <label for="name">Widget Name:</label>
  <input type="text" id="name" name="name" required="required" />
  <br />

  <label for="location">Widget Location:</label>
  <select id='location' required="required"></select>
  <br />

  <input type=submit name=submit value="Create Widget" \>
  <a href="/#widgets">Cancel</a>
</form>